<div style="width: 98%; margin: auto;">
    <div class="d-flex flex-row justify-content-between">
        <div class="d-flex flex-column" style="width: 30%;">
            <div class="text-center mt-5" style="color: black; margin: auto; width: 100%;">
                <div class="d-flex flex-row justify-content-evenly align-items-center p-4 item">
                    <div style="width: 40%;">
                        <img src="{{user.photo}}" alt="icon" class="profile-photo">
                    </div>
                    <div style="width: 50%;">
                        <h4>{{user.firstName}} {{user.lastName}}</h4>
                        <p>{{user.username}}</p>
                        
                    </div>   
                </div>

                <br>

                <div class="d-flex flex-column justify-content-evenly align-items-center p-4 item">
                    <p>{{user.email}}</p>
                    <p>{{user.phone}}</p>
                </div>
                
            </div>
        </div>
        <div class="d-flex flex-column" style="width: 68%; height: auto;  ">
            <br>
            <div class="container">
                <div class="table-responsive">
                    <table class="table">
                        {{!-- <caption>Friends List</caption> --}}
                        <thead>
                            <tr>
                            <th scope="col">Profile</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Username</th>
                            <th></th>
                            <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each requests}}
                                <tr>
                                    <th scope="row">
                                        <img src="{{this.from.dataValues.photo}}" alt="profile" class="profile_photo_post">
                                    </th>
                                    <td>{{this.from.dataValues.firstName}}</td>
                                    <td>{{this.from.dataValues.lastName}}</td>
                                    <td>{{this.from.dataValues.username}}</td>
                                    <td>
                                        <a href="/accept/friend/{{this.id}}" class="btn btn-success">Accept</a>
                                    </td>
                                    <td>
                                        <a href="/reject/friend/{{this.id}}" class="btn btn-danger">Reject</a>
                                    </td>
                                </tr>
                            {{/each}}  
                        </tbody>
                    </table>
                </div>
            
                <br>

            </div>
        </div>
    </div>
</div>
