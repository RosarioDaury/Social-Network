<div style="width: 85%; margin: auto;">
    <div class="d-flex flex-row justify-content-between">
        <div class="d-flex flex-column" style="width: 27%; background: rgb(52, 73, 94, .8);">
            <img src="{{user.photo}}" alt="profile" class="profile-photo">
            <div class="text-center mt-5" style="color: white;">
                <h4>{{user.firstName}} {{user.lastName}}</h4>
                <p>{{user.username}}</p>
                <p>{{user.email}}</p>
                <p>{{user.phone}}</p>
            </div>
            
        </div>
        <div class="d-flex flex-column scrollable" style="width: 70%; height: 500px;  ">
            <br>
            <div class="container">
               <ul class="nav nav-tabs">
                <li class="nav-item">
                  <a class="nav-link {{#if invits}} {{else}} active {{/if}}" href="/Events">Your Events</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link {{#if invits}} active {{/if}}" href="/Events?invitations=true">Invitation</a>
                </li>
              </ul>
            <br>

            {{#if hasEventsErrors}}
                {{#each EventsErrors}}
                    <p class="text-danger text-center">{{this}}</p>
                {{/each}}
            {{/if}}

            <div class="modal_friend hidden" id="modal">
                    <form action="/post/create/event" method="post" class="d-flex flex-column justify-content-center align-items-left" style="color: white;">
                        <div class="d-flex flex-row justify-content-between">
                            <h5 class="text-center" style="">Create Event</h5>
                            <button class="btn btn-secondary mb-3" id="closeModal">Close</button>
                        </div>
                        <input type='text' class="form-control mb-1" name="name" placeholder="Event's Name" >
                        <input type='date' class="form-control mb-1" name="date" placeholder="Event's Date" required>
                        <input type='text' class="form-control mb-1" name="location" placeholder="Event's Location" required>
                        <input type="submit"  class="btn btn-primary mt-3" value="Create" style="width: 100%;">
                    </form>
            </div>

            <div class="float-right mb-3">
              <button id="addbtn" class="btn btn-primary">Create Event</button>
            </div>

            <div class="table-responsive">
                    <table class="table">
                        {{!-- <caption>Friends List</caption> --}}
                        <thead>
                            <tr>
                              <th scope="col">Name</th>
                              <th scope="col">Date</th>
                              <th scope="col">Is Done?</th>
                              <th scope="col">Location</th>
                              <th scope="col">Guests</th>
                              <th></th>
                              <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each events}}
                                <tr>
                                    <td>{{this.name}}</td>
                                    <td>{{this.date}}</td>
                                    <td>No</td>
                                    <td>{{this.location}}</td>
                                    <td>0</td>
                                    <td>
                                        <a href="/accept/friend/{{this.id}}" class="btn btn-success">Invite</a>
                                    </td>
                                    <td>
                                        <a href="/reject/friend/{{this.id}}" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            {{/each}}  
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const button = document.getElementById('addbtn');
    const buttonClose = document.getElementById('closeModal');
    const modal = document.getElementById('modal');
    console.log(button);

    button.addEventListener('click', (e) => {
        modal.classList.remove('hidden');
    })

    buttonClose.addEventListener('click', (e) => {
        e.preventDefault();
        modal.classList.add('hidden');
    })
</script>